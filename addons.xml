<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.audio.openlast" name="openlast" version="0.1.0" provider-name="wkia">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en</language>
        <license>GPL 2.0</license>
        <!--forum>http://forum.kodi.tv/showthread.php?tid=223813</forum-->
        <website>http://openlast.wkia.net.ru</website>
        <!--source>https://github.com/Bitcrusher/Rockradio-com-XBMC-plugin</source-->
        <summary lang="en">openlast radio</summary>
        <description lang="en">
            openlast radio description
        </description>
    </extension>
</addon>

<addon id="repository.wkia" name="wkia's XBMC Addons" version="1.0.0" provider-name="wkia">
	<extension point="xbmc.addon.repository" name="wkia's XBMC Addon Repository">
		<info compressed="false">http://github.com/wkia/kodi-addon-repo/raw/master/addons.xml</info>
		<checksum>http://github.com/wkia/kodi-addon-repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/wkia/kodi-addon-repo/raw/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install wkia's Addons</summary>
		<description>Download and install addons by wkia</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
